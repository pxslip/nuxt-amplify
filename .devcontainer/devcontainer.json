// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Nuxt 3 on Amplify",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/typescript-node:0-16-bullseye",
  "mounts": [{ "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.aws", "target": "/home/node/.aws", "type": "bind" }],

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],s

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "sh .devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": ["Vue.volar", "esbenp.prettier-vscode", "amazonwebservices.aws-toolkit-vscode"]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {},
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
	"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {},
	"ghcr.io/dhoeric/features/act:1": {}
  }

  // Configure tool-specific properties.
  // "customizations": {},

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
